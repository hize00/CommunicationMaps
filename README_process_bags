# To create a log file with x,y and signal strength, in the same format as main_robot.py
# Example for 2 robots

roscore

rosparam set /use_sim_time true

rosbag play --clock -r 10 --pause <bag file robot 0> <bag file robot 1>

rosrun strategy sample.py _pose_topic_name:="/pose0" _child_frame:="/robot_0/base_footprint"
rosrun strategy sample.py _pose_topic_name:="/pose1" _child_frame:="/robot_1/base_footprint"

rosrun strategy time_synchronizer.py _environment_name:=swearingen_3_floor_2017-02 _strategy:=max_variance_dist
